<!DOCTYPE html>
@Styles.Render("~/Content/css")
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Магазин настольных игр</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Магазин настольных игр", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li>@Html.ActionLink("О приложении", "About", "Home")</li>
                    <li>
                        <div class="dropdown margin-for-nav-button">
                            <button class="btn btn-default dropdown-toggle color-for-button" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Состояние БД</button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li>
                                    @Html.ActionLink("Игры", "Index", "Games")
                                </li>
                                <li>
                                    @Html.ActionLink("Жанры", "Index", "Genres")
                                </li>
                                <li>
                                    @Html.ActionLink("Авторы", "Index", "Authors")
                                </li>
                                <li>
                                    @Html.ActionLink("Клиенты", "Index", "Clients")
                                </li>
                                <li>
                                    @Html.ActionLink("Производители", "Index", "Manufacturers")
                                </li>
                                <li>
                                    @Html.ActionLink("Заказы", "Index", "Orders")
                                </li>
                                <li>
                                    @Html.ActionLink("Отзывы", "Index", "Reviews")
                                </li>
                                <li>
                                    @Html.ActionLink("Типы", "Index", "Types")
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Магазин настольных игр</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
